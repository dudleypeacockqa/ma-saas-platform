# Production Environment Configuration
# M&A SaaS Platform - Phase 1 Infrastructure
# SECURITY WARNING: Never commit this file to version control

# Environment
ENVIRONMENT=production
DEBUG=false
TESTING=false

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME="M&A SaaS Platform"
VERSION=1.0.0
SHOW_DOCS=false

# Security Keys (Replace with actual secure keys)
SECRET_KEY=${SECRET_KEY}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Configuration
CORS_ORIGINS=https://ma-platform.render.com,https://www.ma-platform.com
ALLOWED_HOSTS=ma-platform.render.com,www.ma-platform.com

# Database Configuration
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}/${DB_NAME}
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30

# Redis Cache
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CACHE_TTL=3600

# Claude AI Integration
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7
CLAUDE_SYSTEM_PROMPT="You are an expert M&A advisor and ecosystem intelligence analyst. Your role is to provide strategic insights, deal analysis, partnership recommendations, and wealth-building optimization strategies for the M&A ecosystem platform."

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY=${OPENAI_API_KEY}
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Stripe Payment Processing
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Clerk Authentication
CLERK_SECRET_KEY=${CLERK_SECRET_KEY}
CLERK_PUBLISHABLE_KEY=${CLERK_PUBLISHABLE_KEY}
CLERK_WEBHOOK_SECRET=${CLERK_WEBHOOK_SECRET}

# Email Configuration (Optional)
EMAIL_ENABLED=true
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=${SENDGRID_API_KEY}
EMAIL_FROM=noreply@ma-platform.com

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
SENTRY_TRACES_SAMPLE_RATE=0.1

# File Storage
UPLOAD_MAX_SIZE_MB=100
ALLOWED_UPLOAD_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.csv,.txt

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# AI Rate Limits
AI_RATE_LIMIT_PER_MINUTE=20
AI_RATE_LIMIT_PER_DAY=1000

# Performance
QUERY_TIMEOUT_SECONDS=30
REQUEST_TIMEOUT_SECONDS=60

# Feature Flags
FEATURE_AI_ANALYSIS=true
FEATURE_PARTNERSHIP_MATCHING=true
FEATURE_DEAL_SCORING=true
FEATURE_ECOSYSTEM_MAPPING=true

# Render-specific Configuration
RENDER_API_KEY=rnd_7cK6Tcaqek5sZ4WSZ5Y3Xqbq2hZ4
PORT=10000
HOST=0.0.0.0

# Frontend URL
FRONTEND_URL=https://ma-platform.render.com