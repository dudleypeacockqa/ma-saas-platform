SENDGRID_DEAL_NOTIFICATION_TEMPLATE_ID=d-567890abcdef1234
SENDGRID_PASSWORD_RESET_TEMPLATE_ID=d-fedcba0987654321

# Email Campaign Settings
SENDGRID_DEFAULT_CATEGORIES=ma-saas,100daysandbeyond
SENDGRID_UNSUBSCRIBE_URL=https://100daysandbeyond.com/unsubscribe
SENDGRID_TRACKING_ENABLED=true

# Rate Limiting (Optional)
SENDGRID_RATE_LIMIT_PER_SECOND=10
SENDGRID_RATE_LIMIT_PER_MINUTE=600

# ============================================================================
# EXISTING ENVIRONMENT VARIABLES (keep these)
# ============================================================================

# Database
