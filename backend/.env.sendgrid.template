# Authentication
CLERK_SECRET_KEY=your_existing_clerk_secret
CLERK_WEBHOOK_SECRET=your_existing_webhook_secret

# AI Services
ANTHROPIC_API_KEY=your_existing_anthropic_key
OPENAI_API_KEY=your_existing_openai_key

# Storage
STORAGE_PROVIDER=r2
CLOUDFLARE_ACCOUNT_ID=your_existing_cloudflare_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_existing_r2_access_key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_existing_r2_secret_key
CLOUDFLARE_R2_BUCKET_NAME=ma-platform-documents
CLOUDFLARE_R2_ENDPOINT=your_existing_r2_endpoint

# Application Settings
