# SendGrid API Key (REQUIRED)
# Get from: https://app.sendgrid.com/settings/api_keys
# Create with "Full Access" permissions for complete functionality
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email Sender Configuration
SENDGRID_FROM_EMAIL=noreply@100daysandbeyond.com
SENDGRID_FROM_NAME=100 Days and Beyond

# SendGrid Template IDs (Optional - for dynamic templates)
